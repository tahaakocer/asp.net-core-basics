@model IEnumerable<Candidate>

@if (Model.Count() > 0)
{
    <div>
        <h6 class="display-6">
            Applications(@Model.Count())
        </h6>
        <table class="table table-hover table-striped">
            <thead>
                <th>Email</th>
                <th>Full Name</th>
                <th>Apply At</th>
                <th>Course</th>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Email</td>
                        <td>@item.FirstName</td>
                        <td>@item.ApplyAt</td>
                        <td>@item.SelectedCourse</td>
                    </tr>   
                }
            </tbody>
        </table>
    </div>

}
else
{
    <div class="alert alert-info">
        There is no application. Please click here to apply.
        <a asp-action="Apply" class="alert-link">
            apply.
        </a>
    </div>
}
